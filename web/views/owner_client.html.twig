{% extends "base.html.twig" %}

{% block title %}Account{% endblock %}

{% block content %}

<div class="jumbotron green">
    <h1>{{account.getFamilyName}}</h1>
    <hr>
</div>
<!-- jumbotron -->
<div class="row">
    <div class="col-sm-6">
        <div class="panel panel-info">
            <h4 class="panel-heading">{{account.getFamilyName}}</h4>
            <ul>
                <li>Parent Name: {{account.getParentOneName}}</li>
                <li>Other Parent Name:{{account.getParentTwoName}}</li>
                <li>Street Address:{{account.getStreetAddress}}</li>
                <li>Phone Number:{{account.getPhoneNumber}}</li>
                <li>Email Address:{{account.getEmailAddress}}</li>
                {% if account.getStudents is not empty %}
                {% for student in account.getStudents %}
                <li>Student Name:{{student.getName}}</li>
                {% endfor %}
                {% endif %}
            </ul>
        </div>

        <form action="/owner_add_student_to_account" method="post">
            <div class="panel panel-info">
                <h3 class="panel-heading">Add New Student</h3>
                <div class="panel-body">
                    <div class="form-group">
                        <label for="student_name">Name</label><br>
                        <input class="form-control" type="text" name="student_name" required><br>
                        <input type="hidden" name="account_id" value="{{account.getId}}">
                        <button class="btn btn-info btn-md"type="submit">Submit</button><br>
                    </div>
                </div>
            </div>
        </form>
    </div>
    <!-- row in column -->
    <div class="col-sm-4">
        <h3></h3>
        {% if selected_students is not empty %}
            {% for student in selected_students %}
                <div class="panel panel-info">
                    <h4 class="panel-heading">{{student.getName}}</h4>
                    <ul>
                        {% if student.getCourses is not empty %}
                            {% for course in student.getCourses %}
                                <li><strong>{{course.getTitle}}</strong></li>
                                {% if course.getLessons is not empty %}
                                    <ul>
                                        {% for lesson in course.getLessons %}
                                            <li>{{lesson.getTitle}}</li>
                                        {% endfor %}
                                    </ul>
                                {% endif %}
                            {% endfor %}
                        {% endif %}
                    </ul>
                </div>
            {% endfor %}
        {% endif %}
    </div>
    <!-- row -->
    <div class="col-sm-2">
        <form action="/search_input" method="post">
            <div class="form-group">
                <label for="search_input">Search for Client</label>
                <input class="form-control" type="text" name="search_input" placeholder=" search something...">
            </div>
        </form>
        <br>

        <div id="outer">
            <!-- <div class="inner"><form class="" action="index.html" method="post">
                <button  type="submit" name="view_accounts" class="btn btn-info btn-sm" value="view">search accounts</button>
            </form></div>
            <div class="inner"><form action="/owner_clients" method="post">
                <button type="submit" name="view_accounts" class="btn btn-warning btn-sm" value="view">view accounts</button>
            </form></div>
            <div class="inner"><form action="/owner_delete-clients" method="post">
                <button type="submit" class="btn btn-danger btn-sm" name="delete_accounts">delete accounts</button>
            </form></div> -->
        </div>
        <div class="col-md-12">
            {% if accounts is not empty %}
                <table class="table table-hover">
                    <thead>
                        <th>Clients Name</th>
                    </thead>
                    <tbody>
                        {% for account in accounts %}
                        <tr>
                            <td><a href="/owner_accounts/{{account.getId}}">{{ account.getFamilyName}}</a></td>
                        </tr>
                        {% endfor %}
                    </tbody>
                </table>
            {% endif %}
        </div>
    </div>
</div>

    {% endblock %}
