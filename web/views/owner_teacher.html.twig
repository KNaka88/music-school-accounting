{% extends "base2.html.twig" %}

{% block title %}Teacher{% endblock %}

{% block content %}



<div class="row">
    <div class="col-md-8">
        <div class="jumbotron">
            <h1>{{ teacher.getName }}</h1>
            <form action="/owner_teacher/{{ teacher.getId }}" method="post">
                <input name="_method" type="hidden" value="patch">
                <label for="new_notes">add notes...</label><br>
                <textarea name="new_notes" rows="3" cols="40"></textarea><br>
                <input type="reset">
                <button type="submit" class="btn button-success" name="button">Submit</button>
            </form>
            <ul>
                <li>instruments: {{teacher.getInstrument}} </li>
                <li>teacher id: {{teacher.getId}} </li>
            </ul>
        </div>
        <!-- jumbotron -->
    </div>

    <!-- left column -->
    <div class="col-md-4">
        <form action="/owner_teacher/teacher_termination/{{ teacher.getId }}" method="post">
            <input name="_method" type="hidden" value="delete">
            <button type="submit" name="button">delete teacher</button>
        </form>

        {% if teachers_students is not empty %}
        <div class="panel panel-info">
            <h2 class="panel-heading">Assigned Teachers</h2>
            <table class="table table-hover">
                <thead>
                        <th>Student Name</th>
                </thead>
                <tbody>
                {% for student in teachers_students %}
                <tr>
                    <td><a href="/owner_students/{{ student.getId }}">{{ student.getName }}</a></td>
                </tr>
                    {% endfor %}
                </tbody>
            </table>
                {% endif %}
            </div>
        </div>
    </div>

<div class="jumbotron">
    {% if notes_array is not empty %}
    <div class="well">
        <ul>
            <label>notes:</label>
            {% for note in notes_array %}
            <li><strong>{{ note }}</strong></li>
            <p></p><br>
            {% endfor %}
        </ul>
    </div>
    {% endif %}
    <!-- well -->
</div>

<form action="/owner_teacher/{{ teacher.getId }}" method="post">
    <input id="teacher_id" name="teacher_id" type="hidden" value="{{ teacher.getId }}">
    <label for="student_id">Assign a student</label>
    {% if students is not empty %}
    <select id="student_id" class="form-control" name="student_id">
        {% for student in students %}
        <option value="{{student.getId}}">{{student.getName}}</option>
        {% endfor %}
    </select>
    <button type="submit" name="button">submit</button>
</form>
{% endif %}
<!-- jumbotron -->

{% endblock %}
