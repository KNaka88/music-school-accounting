{% extends "base.html.twig" %}

{% block title %}Students{% endblock %}

{% block content %}

<div class="jumbotron">
    {% if students is not empty %}
    <h1>Students</h1>
    <hr>
</div>

<div class="row" id="alignstudents">
    <div class="col-md-4" id="addstudentbox">
        <form action="/owner_students" method="post">
            <div class="panel panel-info">
                <h3 class="panel-heading">Add New Student</h3>
                <div class="panel-body">
                    <div class="form-group">
                        <label for="student_name">Name</label><br>
                        <input type="text" name="student_name" required><br>
                        <button type="submit">Submit</button><br>
                    </div>
                </div>
            </div>
        </div>
        </form>

        <div class="col-md-3">
            <h3>Current Students</h3>
            <table class="table table-hover">
                <thead>
                    <th>Name</th>
                </thead>
                <tbody>
                    {% for student in students %}
                    <tr>
                        <td><a href="owner_student/{{student.getId}}">{{student.getName}}</a></td>
                    </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
        {% endif %}

</div>
    {% endblock %}
