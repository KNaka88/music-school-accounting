{% extends "base.html.twig" %}

{% block title %}Accounts{% endblock %}

{% block content %}

<div class="container">
    <div class="jumbotron green">
        <h1>Accounts</h1>
    </div>
    <!-- jumbotron -->
    <div class="row">
        <div class="col-sm-6">
            <div class="jumbotron blue">
                <h4>Create New Account</h4>
                <form action="/accounts" method="post">
                    <div class="form-group">
                        <label for="name_input">Name: </label>
                        <input class="form-control" type="text" name="name_input">
                        <label for="phone_number_input">Phone Number: </label>
                        <input class="form-control" type="text" name="phone_number_input">
                        <label for="address_input">Address: </label>
                        <input class="form-control" type="text" name="address_input">
                    </div>
                    <!-- formgroup -->
                    <button class="btn btn-primary" type="submit" name="new_account_submit">create new account</button>
                </form>
                <form class="" action="/search_input" method="post">
                    <div class="form-group">
                        <label for="search_input"></label>
                        <input class="form-control" type="text" name="search_input" placeholder="first letter search...">
                    </div>
                    <button type="submit" name="view_accounts" class="btn btn-info" value="view">search accounts</button>
                </form>
                <form class="" action="/" method="post">
                    <button type="submit" name="view_accounts" class="btn btn-warning" value="view">view accounts</button>
                </form>
                <form class="" action="/delete-accounts" method="post">
                    <button type="submit" class="btn btn-danger" name="delete_accounts">delete accounts</button>
                </form>
            </div>
            <!-- jumbotron blue -->
        </div>
        <!-- right column form -->
        <div class="col-sm-6">
            <div class="jumbotron purple">

            </div>
            <!-- jumbotron purple -->
        </div>
        <!-- column -->
    </div>
    <!-- row -->
    <nav id="bottom-nav" class="navbar navbar-inverse navbar-static-top" role="navigation">
        <div class="collapse navbar-collapse">
            <ul class="nav navbar-nav">
                <li>
                    <a href="https://github.com/elmunoz42"><i class="fa fa-git" aria-hidden="true"></i>Carlos Munoz Kampff</a>
                </li>
            </ul>
        </div>
    </div>  <!-- /.navbar-collapse -->
</nav>
<!-- nav-bar -->
{% endblock %}
