{% extends "base.html.twig" %}

    <title>CRM Music School</title>
    {% block content %}
      <div class="nav-bar">
        <div class="logo">
          <img src="img/splogo.jpg" alt="logo">
          <h1></h1>
          <p class="intro"></p>
        </div>
        <div class="center-div">
          <div class="sidebar">
            <ul>
              <li><a href="/teachers">teachers</a></li>
              <li><a href="/students">students</a></li>
              <li>accounts</li>
              <li>billing</li>
              <li><a href="/">home</a></li>
            </ul>
          </div> <!--sidebar-->
        </div> <!--logo-->
      </div> <!--nav-bar-->
          {% if courses is not empty %}
              <div class="jumbotron">
                  <h1>Courses </h1>
                  <p></p>
                  <ul>
                  {% for course in courses %}
                      <li><a   href="courses/{{course.getId}}">{{course.getTitle}}</a></li>
                  {% endfor %}
                  </ul>
              </div>
              <!-- jumbotron -->
          {% endif %}
          <form action="/courses" method="post">
              <label for="course_title">Name</label><br>
              <input type="text" name="course_title" required><br>
              <button type="submit">Submit</button><br>
          </form>

    {% endblock %}
