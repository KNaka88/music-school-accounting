{% extends "base.html.twig" %}

{% block title %}Teachers{% endblock %}

      <div class="jumbotron">
        <h1>Teachers</h1>
        <p></p>
      </div>
      {% if teachers is not empty %}
      <ul>
        {% for teacher in teachers %}
          <li><a href="teachers/{{teacher.getId}}">{{teacher.getName}}</a></li>
        {% endfor %}
      </ul>
      {% endif %}
      <form action="/teachers" method="post">

        <label for="teacher_name">Name</label><br>
        <input type="text" name="teacher_name" required><br>
        <label for="teacher_instrument">Instrument</label><br>
        <input type="text" name="teacher_instrument" required><br>
        <button type="submit">Submit</button><br>
      </form>

{% endblock %}
