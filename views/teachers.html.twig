<!DOCTYPE html>
<html>
  <head>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
    <link href='styles.css' rel='stylesheet' type='text/css'>
    <title>CRM Music School</title>
  </head>
  <body>
      <div class="nav-bar">
        <div class="logo">
          <img src="img/splogo.jpg" alt="logo">
          <h1></h1>
          <p class="intro"></p>
        </div>
        <div class="center-div">
          <div class="sidebar">
            <ul>
              <li><a href="/teachers">teachers</a></li>
              <li><a href="/students">students</a></li>
              <li>accounts</li>
              <li>billing</li>
              <li><a href="/">home</a></li>
            </ul>
          </div>
          <!--sidebar-->
        </div>
        <!--logo-->
      </div>
      <!--nav-bar-->
      <div class="jumbotron">
        <h1>Teachers</h1>
        <p></p>
      </div>
      {% if teachers is not empty %}
      <ul>
        {% for teacher in teachers %}
          <li><a href="teachers/{{teacher.getId}}">{{teacher.getName}}</a></li>
        {% endfor %}
      </ul>
      {% endif %}
      <form action="/teachers" method="post">

        <label for="teacher_name">Name</label><br>
        <input type="text" name="teacher_name" required><br>
        <label for="teacher_instrument">Instrument</label><br>
        <input type="text" name="teacher_instrument" required><br>
        <button type="submit">Submit</button><br>
      </form>
      <a href="/">Home</a>
  </body>
</html>
